<div class="container">
	<div class="col-md-6 col-md-offset-3">
    <div class="panel-group">
    <div class="panel panel-info">

		<div class="panel-heading">Records Summary for <%= @patient.user.full_name %></div>
		<div class="panel-body">
			Medical Condition:<br> 
			<%= MedicalRecord.find(params[:medical_record_id]).medical_condition.name %> <br>
			Medical Category:<br>
			<%= MedicalRecord.find(params[:medical_record_id]).medical_category.name %> <br>

			<% if !Medication.find_by(appointment_id: session[:appointment_id]).nil? %>
				<% Medication.where(appointment_id: session[:appointment_id]).each do |med| %>
					Medication: <%= med.name %>
					Dosage: <%= med.dosage %>
				<% end %>
			<% end %>
</div>
</div>
</div>

<%= form_for @medication, html: {class:"col-md-6 col-md-offset-3"}, url: medical_record_appointment_medications_submit_path(params[:medical_record_id]) do |form| %>
 	<div class="form-group">
		<%= form.label 'Medication Name' %>
	 	<%= form.text_field :name, class:"form-control" %>
	</div>
	<div class="form-group">
		<%= form.label 'Dosage' %>
		<%= form.text_field :dosage, class:"form-control" %>
	</div>
	<center><%= form.submit 'Submit', class:"btn btn-primary" %></center>
<% end %>

<%= button_to 'Done', medical_record_appointment_completed_path(params[:medical_record_id]), method: :get, class: 'btn btn-success' %>

</div>
