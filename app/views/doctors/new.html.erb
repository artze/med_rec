<div class="container">

  <%= form_for @user, url: doctors_path, :html => {class: 'form-horizontal'} do |form| %>

  <div class="form-group">
    <div class="control-label col-md-4">
      Full Name:
      </div>
        <div class="col-md-4">
            <%= form.text_field :full_name, type: 'full_name', class: 'form-control' %>
        </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-4">
      Identity Card: 
    </div>
    <div class="col-md-4">
      <%= form.text_field :identity_card, type: 'identity_card', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-4">
      Email: 
    </div>
    <div class="col-md-4">
      <%= form.text_field :email, type: 'email', class: 'form-control' %>
    </div> 
  </div>


  <div class="form-group">
    <div class="control-label col-md-4">
      Contact Number: 
    </div>
    <div class="col-md-4">
      <%= form.text_field :contact_number, class: 'form-control' %>
    </div> 
  </div>


  <div class="form-group">
    <div class="control-label col-md-4">
      <div class="password-field">
        Password: 
      </div>
    </div>
    <div class="col-md-4">
    <%= form.password_field :password, class: 'form-control' %>
    </div>
  </div>


  <div class="form-group">
    <div class="control-label col-md-4">
      Street Address: 
    </div>
    <div class="col-md-4">
      <%= form.text_field :street_address, class: 'form-control' %>
    </div>
  </div>
   
  <div class="form-group">  
    <div class="control-label col-md-4">
      Postcode: 
    </div>
    <div class="col-md-4">
    <%= form.text_field :postcode, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-4">
      City: 
    </div>
    <div class="col-md-4">
      <%= form.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-4">
      Country:
    </div>
    <div class="col-md-4">
      <%= form.text_field :country, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-4">
      Specialization: 
    </div>
    <div class="col-md-4">
      <select class="form-control" id="specialization-select" name="specialization">
          <option> Neurology</option>
          <option>Orthopaedics</option>
          <option>Cancer</option>
          <option>Paediatrics</option>
          <option>Ear</option> Nose and Throat</option>
          <option>Ophthalmology</option>
          <option>Cardiovascular</option>
          <option>Endocrinology</option>
          <option>Renal Disorders</option>
          <option>Respiratory Disorders</option>
          <option>Gastroenterology</option>
          <option>Urinary & Reproductive System</option>
          <option>Obstetrics & Gynaecology</option>
          <option>Oral and Maxillofacial</option>
          <option>Dermatology</option>
          <option>Geriatic Disorders</option>
          <option>Haematology</option>
          <option>Psychiatry</option>
          <option>Infectious Diseases</option>
          <option>Rheumatology</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-md-6">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>


  <% end %>
</div>
